<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIGHTROLL"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Search Bar -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/search_background"
                app:queryHint="Search bars, events, locations..."
                app:iconifiedByDefault="false" />

            <!-- Filter Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_all"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="All"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_rooftop"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Rooftop"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_club"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Club"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_lounge"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Lounge"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Rolling Tonight Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_rolling_tonight"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="I'M ROLLING TONIGHT"
                android:textColor="@color/button_primary_text_color"
                android:backgroundTint="@color/button_primary_background"
                android:layout_marginBottom="32dp"
                app:cornerRadius="8dp" />

            <!-- Active Bars Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BARS ACTIVE TONIGHT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_active_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp" />

            <!-- Nearby Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEARBY SPOTS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_nearby_bars"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp" />

            <!-- Trending Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRENDING NOW"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_trending_bars"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp" />

            <!-- Following Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOLLOWING"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_following_reels"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

        </LinearLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>