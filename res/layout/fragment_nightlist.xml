<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Hangouts"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="16dp" />

        <!-- Stats Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Nightlife Stats"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/text_total_visits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_color"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_favorite_spot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_color"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_new_discoveries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_color"
                    android:fontFamily="@font/inter_regular" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Hangout Lists -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_hangout_lists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Favourites Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favourites"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:fontFamily="@font/inter_bold" />

            <TextView
                android:id="@+id/text_favourites_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_color"
                android:fontFamily="@font/inter_regular"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_toggle_favourites"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/arrow_down_float"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_add_to_favourites"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_add" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_favourite_bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/section_favourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_favourite_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Starred Places Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Starred Places"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:fontFamily="@font/inter_bold" />

            <TextView
                android:id="@+id/text_starred_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_color"
                android:fontFamily="@font/inter_regular"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_toggle_starred"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/arrow_down_float"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_add_to_starred"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/section_starred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_starred_bars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Past Spots Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Past Spots"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from your Location History"
            android:textSize="14sp"
            android:textColor="@color/secondary_text_color"
            android:fontFamily="@font/inter_regular"
            android:layout_marginBottom="16dp" />

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_yesterday"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Yesterday"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_places"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Places"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_july"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="July"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cities"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Cities"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Location History -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_location_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>